<launch>
    <!-- 不使用仿真时间 -->
    <param name="/use_sim_time" value="false" />

    <!-- 启动 arbotix driver-->
    <arg name="sim" default="true" />

    <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find kr10)/urdf/kr10.xacro'" />

    <node name="arbotix" pkg="arbotix_python" type="arbotix_driver" output="screen">
        <rosparam file="$(find kr10)/config/arm.yaml" command="load" />
        <param name="sim" value="true"/>
    </node>

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="rob_st_pub" />

    <include file="$(find kr10_moveit_config)/launch/move_group.launch" />

    <!-- 启动rviz可视化界面 -->
    <!-- <node name="rviz" pkg="rviz" type="rviz" args="-d $(find marm_planning)/config/pick_and_place.rviz" required="true" /> -->
    <!-- Run Rviz and load the default config to see the state of the move_group node -->
    <!-- <include file="$(find kr10_moveit_config)/launch/moveit_rviz.launch">
        <arg name="rviz_config" value="$(find kr10_moveit_config)/launch/moveit.rviz"/>
    </include> -->
</launch>
