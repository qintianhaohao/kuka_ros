<launch>
    <!-- 不使用仿真时间 -->
    <param name="/use_sim_time" value="false" />

    <!-- 启动 arbotix driver-->
    <arg name="sim" default="true" />

    <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find kr60)/urdf/kr60.xacro'" />

  <!-- We do not have a robot connected, so publish fake joint states -->
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <rosparam param="source_list">[move_group/fake_controller_joint_states]</rosparam>
  </node>

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="rob_st_pub" />

    <include file="$(find kr60_moveit_config)/launch/move_group.launch" >
        <arg name="fake_execution" value="true"/>
    </include>

    <!-- 启动rviz可视化界面 -->
    <!-- <node name="rviz" pkg="rviz" type="rviz" args="-d $(find kr60_planning)/config/arm.rviz" required="true" /> -->
    <!-- <node name="rviz" pkg="rviz" type="rviz" args="-d $(find kr60_planning)/config/pick_and_place.rviz" required="true" /> -->
    <!-- Run Rviz and load the default config to see the state of the move_group node -->
    <!-- <include file="$(find kr60_moveit_config)/launch/moveit_rviz.launch">
        <arg name="rviz_config" value="$(find kr60_moveit_config)/launch/moveit.rviz"/>
    </include> -->
</launch>
